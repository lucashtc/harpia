    "autoload": {
        "psr-4": {
            "Src\\": "src/"
        }
    },
    "require-dev": {
        "nunomaduro/phpinsights": "^2.6",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12",
        "phpcbf": "phpcbf --standard=PSR12",
        "phpunit": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
